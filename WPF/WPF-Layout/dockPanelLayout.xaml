<Window x:Class="WPF_Layout.dockPanelLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Layout"
        mc:Ignorable="d"
        Title="dockPanelLayout" Height="450" Width="400">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="B"></Button>
            <Button Content="K"></Button>
            <Button Content="U"></Button>
        </StackPanel>
        <Button DockPanel.Dock="Left" Content="Button 4"></Button>
        <Button DockPanel.Dock="Right" Content="Button 2"></Button>
        <Button DockPanel.Dock="Top" Content="Button Top" ></Button>
        <Button DockPanel.Dock="Bottom" Content="Button 3"></Button>
        <Button DockPanel.Dock="Left" Content="Button 5"></Button>
    </DockPanel>
</Window>
